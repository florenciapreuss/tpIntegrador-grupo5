<!DOCTYPE html>
<html lang="en">

<%-include("./partials/head")%>

    <body>
            <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
      <% } else { %>
        <%- include('./partials/header') %>
      <% } %>


            <main>
                <div class="user-detail container">
                    <section class="top main-content">
                        <img class="profile" src="<%= usuario.foto_perfil %>" alt=""> 
                        <div class="info-usuario">
                            <p>
                                <%= usuario.nombre_usuario %>
                            </p>
                            <a class="follow" href="/editarPerfil"><i class="fa-solid fa-user-gear"></i></a>
                            <ul class="meta">
                                <li><%= usuario.posteos_id_usuario.length %></li>
                                <li>200 seguidores</li>
                                <li>300 seguidos</li>
                            </ul>
                        </div>
                    </section>
                    <section class="bottom">
                        <% for( let i=0; i < usuario.posteos_id_usuario.length; i++ ) { %>   
                            <article class="post">
                                <a href="/users/detallePosteo/<%= usuario.posteos_id_usuario[i].id_posteo%>">
                                    <img src="<%= usuario.posteos_id_usuario[i].nombre_imagen %>"> 
                                </a>
                                <p><%= usuario.posteos_id_usuario[i].pie_post %></p>
                            </article>
                            <% } %>
                    </section>
                </div>
            </main>

            <%-include("./partials/footer")%>
    </body>

</html>