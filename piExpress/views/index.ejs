<!DOCTYPE html>
<html lang="en">

<%-include("./partials/head")%>

<body>
    <%-include("./partials/header")%>
    <main>
        <section class="center main-content">
            <% for( let i = 0; i < posteos.length; i++) { %>
                <article class="post">
                    <div class="info-usuario ">
                        <% for( let j = 0; j < usuarios.length; j++ ) { %>
                            <% if (usuarios[j].id_usuario == posteos[i].id_usuario) { %>
                                <img class="fotosPerfilIndex" src="<%= usuarios[j].foto_perfil %>" alt="foto_perfil">
                            <% } %>
                        <% } %>
                        <h4>
                            <a href="/users/detalleUsuario/<%= posteos[i].id_usuario %>"><%= posteos[i].email_usuario %></a>
                        </h4>
                    </div>
                    <div class="post-body">
                        <a href="/users/detallePost/<%= posteos[i].id_posteo %>">
                            <img src="<%= posteos[i].nombre_imagen %>" alt="">
                        </a>
                    </div>
                    <ul class="post-reacciones">
                        <li>
                            <i class="fa-regular fa-heart"></i>
                        </li>
                        <li>
                            <i class="fa-regular fa-comment"></i>
                        </li>
                    </ul>
                    <div class="post-comentarios">
                        <h4>Comentarios</h4>
                        <ul>
                            <% for( let j = 0; j < posteos[j].comentario.length; j++ ) { %>
                                <li>
                                    <a href="/users/detalleUsuario/<%= posteos[i].comentario[j].id_usuario %>"><%= posteos[i].comentario[j].email_usuario %></a>
                                    <span><%= posteos[i].comentario[j].texto_comentario %></span>
                                </li>
                            <% } %>
                            <a href="/users/detallePost/<%= posteos[i].id_posteo %>">Ver m√°s...</a>
                        </ul>
                    </div>
                </article>
            <% } %>
            
        </section>    
    </main>

    <%-include("./partials/footer")%>

</body>

</html>